    'author'              => 'Library::Controller::Author',
    'book'                => 'Library::Controller::Book',
    'book/recommendation' => 'Library::Controller::Book::Recommendation',
});

$dispatcher->dispatch($m, $m->dhandler_arg);
</%init>

